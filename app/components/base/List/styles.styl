@import 'config.styl';

.list {
	background-color: white;
	min-width: 20rem;
	overflow-y: auto;
	border-radius: border-radius;
	border: 0.1rem solid color-line;


	&--side-down {
		border-radius: 0 0 border-radius border-radius;
	}

	&--side-up {
		border-radius: border-radius border-radius 0 0;
	}

	&__items {
		z-index: 2000;
		position: relative;
	}

	&__item-box {
		background-color: white;
		cursor: pointer;

		&--is-active {
			background-color: primary-color;
		}
	}



}




