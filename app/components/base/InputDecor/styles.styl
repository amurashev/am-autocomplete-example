@import './config.styl';


.input-decor {
	border: 0.1rem solid color-line;
	border-radius: border-radius;
	padding: 1rem;

	position: relative;

	&--side-down {
		border-radius: border-radius border-radius 0 0;
	}

	&--side-up {
		border-radius: 0 0 border-radius border-radius;
	}

	&__placeholder-box {
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		padding-left: 1.5rem;
	}

	&__placeholder-box-inner {

		display: flex;
		align-items:center;
		height: 100%;

		transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms;
		z-index: 1;
		cursor: pointer;
		transform-origin: left top 0px;
		pointer-events: none;
		-webkit-user-select: none;

		^[0]--is-focus & {
			height: auto;
			display: block;
			background-color: white;
			padding 0 1.0rem;
			transform: /*scale(0.75)*/ translate(0, -(1rem));
		}
	}
}


