@import 'variables';

html {
    font-family: main-font;
    text-size-adjust: 100%;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    font-size: 62.5%;
    height: 100%;
    width: 100%;
}

body {
    font-size: font-size;
    color: color-text;
    background-color: background-color;
    width: 100%;
    height: 100%;
    min-height: 100%;
    margin: 0;
    padding: 0;
    font-weight: 300;
}

a {
    color: color-primary;
}

b, strong {
    font-weight: 500;
}





@media screen and (max-width: layout-breakpoint-xs) {
    html {
        font-size: 57.5%;
    }
}

@media screen and (max-width: layout-breakpoint-xxs) {
    html {
        font-size: 52.5%;
    }
}

@media screen and (max-width: layout-breakpoint-xxxs) {
    html {
        font-size: 50%;
    }
}